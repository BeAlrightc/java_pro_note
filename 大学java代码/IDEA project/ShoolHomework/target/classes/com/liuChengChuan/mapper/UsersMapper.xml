<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuChengChuan.mapper.UsersMapper">
<!--select all of data at tb_user and data from tb_orders -->
    <select id="findUserWithOrders" parameterType="Integer"
            resultMap="UserWithOrdersResult">
        select u.*,o.id as orders_id,o.number
        from tb_user u,tb_orders o
        where u.id=o.user_id
        and u.id=#{id}
    </select>

   <resultMap id="UserWithOrdersResult" type="Users" >
       <id property="id" column="id"/>
       <result property="username" column="username"/>
       <result property="address" column="address"/>
       <collection property="ordersList" ofType="Orders">
           <id property="id" column="orders_id"/>
           <result property="number" column="number"/>
       </collection>
   </resultMap>
</mapper>