<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuChengChuan.mapper.ProductMapper">
<!--to get id from tb_ordersitem that have id mapping with product-->
<select id="findProductById" parameterType="Integer"
        resultType="Product">
    select * from tb_product where id in(
    select product_id from tb_ordersitem
    where orders_id=#{id}
    )
</select>
</mapper>