<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmcu.pojo.Employee">
    <select id="findById" parameterType="int" resultType="Employee">
        select * from mybatis.employee where id=#{id};
    </select>
    <update id="UpdateById" parameterType="Employee">
        update  mybatis.employee set id=#{id},name =#{name},age=#{age},position=#{position }where id=#{id};
    </update>
    <insert id="AddEmloyee" parameterType="Employee">
        insert into mybatis.employee(id,name,age,position )
        values (#{id},#{name},#{age},#{position});
    </insert>
    <delete id="deleteEmployee" parameterType="int">
        delete from mybatis.employee where id=#{id};
    </delete>
    <select id="findAll" resultType="Employee">
        select * from mybatis.employee ;
    </select>
 </mapper>